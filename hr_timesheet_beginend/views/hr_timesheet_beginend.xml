<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_timesheet_sheet_form" model="ir.ui.view">
        <field name="name">hr.timesheet.form</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id"
            ref="hr_timesheet.project_task_create_timesheet_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']/tree" position="attributes">
                <attribute name="default_order">date, begin_timestamp, id</attribute>
            </xpath>
            <xpath
               expr="//field[@name='timesheet_ids']/tree/field[@name='unit_amount']"
               position="before">
                <field name="begin_timestamp"/>
                <field name="end_timestamp" />
            </xpath>
            <xpath
              expr="//field[@name='timesheet_ids']/form/group/field[@name='unit_amount']"
              position="before">
                <field name="begin_timestamp"/>
                <field name="end_timestamp"/>
            </xpath>
        </field>
    </record>
</odoo>